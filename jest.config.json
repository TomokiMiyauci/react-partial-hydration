{
  "projects": [
    {
      "displayName": "browser",
      "testEnvironment": "jsdom",
      "testMatch": ["<rootDir>/tests/browser/**/*_test.[tj]s?(x)"],
      "transform": {
        "^.+\\.(t|j)sx?$": "@swc/jest"
      },
      "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/lib/$1"
      },
      "setupFilesAfterEnv": ["<rootDir>/tests/setup/jest_dom.ts"]
    },
    {
      "displayName": "server",
      "testEnvironment": "node",
      "testMatch": ["<rootDir>/tests/server/**/*_test.[tj]s?(x)"],
      "transform": {
        "^.+\\.(t|j)sx?$": "@swc/jest"
      },
      "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/lib/$1"
      }
    }
  ],
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8"
}
